<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">頁面文案調整</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        頁面文案
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
      	<div class="table-responsive">
          <%= form_for @wording, :url => link_wording_path(@wording.id) do |f| %>
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>位置</th>
                <th>文案</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>產品內容頁</td>
                <td><%=f.text_field :product_wording,class: "form-control" %></td>
              </tr>
              <tr>
                <td>2</td>
                <td>新聞頁</td>
                <td><%= f.text_field :review_wording,class: "form-control" %></td>
              </tr>
            </tbody>
          </table>
          <%= f.submit "Update", class: "btn btn-primary" %>
          <% end %>
      	</div>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>